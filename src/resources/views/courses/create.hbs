<div class="mt-4">
  <div class="">
    <h1> Create courses</h1>
    <form method="POST" action="/courses/store">
      <div class="form-group">
        <label for="nameInput">Name</label>
        <input type="text" name="name" class="form-control" id="nameInput" />
      </div>

      <div class="form-group">
        <label for="desInput">Description</label>
        <input
          type="text"
          name="description"
          class="form-control"
          id="desInput"
        />
      </div>
      <div class="form-group">
        <label for="imageInput">Image</label>
        <input type="text" name="image" class="form-control" id="imageInput" />
      </div>

      <div class="form-group">
        <label for="slugInput">Slug</label>
        <input type="text" name="slug" class="form-control" id="slugInput" />
      </div>

      <div class="form-group">
        <label for="embedInput">Embed</label>
        <input type="text" name="embed" class="form-control" id="embedInput" />
      </div>

      <button type="submit" class="btn btn-primary">Create</button>
    </form>
  </div>
</div>